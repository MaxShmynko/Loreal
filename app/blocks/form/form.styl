.form
    padding 0 w(160) 0 w(160)
    margin 0 auto
    font-family $ff-Montserrat
    text-transform uppercase
    +below(920px)
        width 100%
        padding 0 wm(60) 0 wm(60)
    +below(720px)
        width 100%
        padding 0 wm(10) 0 wm(10)

    &__wrap
        display flex
        align-items center
        flex-direction column
        border-radius w(50)
        border 1px solid $c-pinck
        padding w(71) w(57) w(70) w(57)
        background rgba(255, 255, 255, 0.50);
        +below(720px)
            padding wm(35) wm(10)


    &__foto,
    &__expert,
    &__description
        display flex
        align-items center
        flex-direction column


    &__number
        display flex
        justify-content center
        align-items center
        color $c-white
        width w(50)
        height w(50)
        background $c-pinck
        border-radius 50%
        font-size w(30)
        +below(920px)
            width wm(15)
            height wm(15)
            font-size wm(8)
        +below(720px)
            width wm(50)
            height wm(50)
            font-size wm(30)

    &__title
        color $c-pinck
        font-size w(24)
        line-height 160%
        font-weight 500
        text-align center
        padding w(16) w(20)
        display block
        br
            display none
        +below(920px)
            font-size wm(8)
            padding wm(8) 0
        +below(720px)
            font-size wm(21)
            padding wm(15) 0 wm(25) 0
            br
                display block

    &__loading-input-file
        display flex
        align-items center
        justify-content center
        cursor pointer
        border-radius w(40)
        width w(224)
        height w(50)
        font-weight 500
        color $c-white
        background-color $c-pinck
        font-size w(16)
        transition 0.3s
        input
            display none

        &:hover
            background-color $c-white
            border 1px solid $c-pinck
            color $c-pinck
        
        +below(920px)
            width wm(70)
            height wm(20)
            border-radius wm(40)
            font-size wm(6)

        +below(720px)
            width wm(224)
            height wm(50)
            border-radius wm(40)
            font-size wm(16)

            

    &__warning
        color $c-gray
        line-height 160%
        text-align center
        font-size w(16)
        padding w(12) w(100)
        +below(920px)
            padding wm(10) 0
            font-size wm(6)
        +below(720px)
            font-size wm(15)
            padding wm(20) 0

    &__example
        display flex
        justify-content center
        gap w(22)
        cursor pointer
        +below(720px)
            flex-direction column
            margin-top wm(10)

    &__example-pravelny,
    &__example-not-correct
        text-decoration underline
        position relative


    &__pravelny-img,
    &__not-correct-img
        border-radius w(40)
        border 1px solid $c-black
        position absolute
        display none
        width w(166)
        height w(220)
        +below(720px)
            width wm(166)
            height wm(220)
            border-radius wm(20)


    &__pravelny-img
        top w(220)
        left w(400)
        +below(720px)
            top wm(350)
            left wm(80)

    &__not-correct-img
        top w(220)
        right w(400)
        +below(720px)
            top wm(350)
            left wm(80)

    &__expert
        margin-top w(43)

    &__radio-container
        display flex
        gap w(20)
        +below(920px)
            flex-direction column
        +below(720px)
            flex-direction column
            gap wm(14)

    &__radio-container-btn-text
        display flex
        align-items center
        justify-content center
        cursor pointer
        width w(370)
        height w(50)
        background-color $c-pinck
        color $c-white
        border-radius w(40)
        font-weight 500
        font-size w(16)
        transition 0.3s
        &:hover
            border 1px solid $c-pinck
            color $c-pinck
            background-color $c-white
        
        +below(920px)
            height wm(20)
            font-size wm(6)
            padding 0 wm(10)
            width wm(180)

        +below(720px)
            width 100%
            height wm(50)
            border-radius wm(40)
            font-size wm(14)
            padding 0 wm(20)

    &__input
        display none
        cursor pointer

    &__input:checked + &__radio-container-btn-text
        display flex
        align-items center
        justify-content center
        border 1px solid $c-pinck
        color $c-pinck
        background-color $c-white
        width w(370)
        height w(50)
        border-radius w(40)
        cursor pointer
        +below(920px)
            height wm(20)
            font-size wm(6)
            padding 0 wm(10)
            width wm(180)

        +below(720px)
            width 100%
            height wm(50)
            border-radius wm(40)
            font-size wm(14)
            padding 0 wm(20)

    &__description
        position relative
        margin-top w(50)
        +below(720px)
            margin-top wm(50)

    &__counter
        margin-top w(20)
        border 1px solid #FC3288
        border-radius w(50)
        width w(750)
        height w(250)
        padding w(30)
        cursor pointer
        transition 0.3s
        +below(720px)
            margin-top wm(20)
            width wm(275)
            height wm(230)
            border-radius wm(10)


    &__counter::placeholder
        color $c-pinck
        font-size w(24)
        line-height 160%
        font-weight 500
        text-align center
        padding w(50) w(70)
        text-transform uppercase
        +below(920px)
            font-size wm(7)
        +below(720px)
            font-size wm(20)
            padding wm(55) 0

    &__character-counter
        position absolute
        color $c-gray
        font-size w(14)
        bottom w(70)
        left w(305)
        text-transform none
        font-family $ff-Inter-LightBETA
        +below(920px)
            font-size wm(5)
            left wm(75)
        +below(720px)
            font-size wm(14)
            left wm(65)
            bottom wm(65)

    &__input-contacts
        border 1px solid #FC3288
        border-radius w(50)
        width w(373)
        height w(60)
        cursor pointer
        padding w(20)
        +below(720px)
            display block
            width 100%
            height wm(30)
            border-radius wm(8)

    &__input-contacts::placeholder
        color $c-gray
        font-size w(14)
        text-align center
        +below(920px)
            font-size wm(5)
        +below(720px)
            font-size wm(14)

    &__approval
        position relative
        margin-top w(25)
        +below(920px)
            margin-top wm(30)
        +below(720px)
            margin-top wm(55)

    &__approval-input:checked, 
    &__approval-input:not(:checked)
        position absolute
        left -9999px

    &__approval-input:checked + label:before, 
    &__approval-input:not(:checked) + label:before
        content ""
        position absolute
        left w(-20)
        top w(-10)
        border-radius 50%
        border 1px solid $c-pinck
        width w(30)
        height w(30)
        cursor pointer
        +below(1200px)
            width wm(7)
            height wm(7)
            left wm(-5)
            top wm(-1)
        +below(920px)
            width wm(15)
            height wm(15)
            left wm(103)
            top wm(-23)
        +below(720px)
            width wm(25)
            height wm(25)
            left wm(155)
            top wm(-40)

    &__approval-input:checked + label:after, 
    &__approval-input:not(:checked) + label:after
        content ""
        position absolute
        -webkit-transition all 0.2s ease
        -moz-transition all 0.2s ease
        -o-transition all 0.2s ease
        transition all 0.2s ease
        left w(-10)
        top w(-2)
        width w(10)
        height w(9)
        border-radius w(1)
        border-left w(3.5) solid $c-pinck
        border-bottom w(3.5) solid $c-pinck
        -webkit-transform rotate(-45deg)
        -moz-transform rotate(-45deg)
        -o-transform rotate(-45deg)
        -ms-transform rotate(-45deg)
        transform rotate(-45deg)
        cursor pointer
        +below(1200px)
            left wm(-2.7)
            top wm(0.5)
        +below(920px)
            width wm(6)
            height wm(6)
            left wm(107.5)
            top wm(-20)
        +below(720px)
            width wm(10)
            height wm(9)
            left wm(162)
            top wm(-35)
            border-left wm(3) solid $c-pinck
            border-bottom wm(3) solid $c-pinck

    &__approval-input:not(:checked) + label:after
        opacity 0

    &__approval-input:checked + label:after
        opacity 1

    &__approval-label
        margin-left w(20)
        color $c-pinck
        font-size w(14)
        text-align center
        line-height 110%
        a
            color $c-pinck
            text-align center

        +below(920px)
            font-size wm(8)
            display block

        +below(720px)
            display block
            font-size wm(12)
            text-align center
            padding 0 wm(31)

    &__error-message
        color $c-gray
        font-size w(14)
        display none
        line-height 160%
        text-transform none
        +below(920px)
            font-size wm(5)
        +below(720px)
            font-size wm(10)

    &__pop-up
        background-color $c-pinck
        color $c-white
        text-align center
        border-radius w(50)
        font-size w(24)
        padding w(71) w(118)
        width w(750)
        text-transform none
        margin-top w(25)
        +below(720px)
            width wm(270)
            margin-top wm(20)
            font-size wm(14)
            padding wm(30) wm(20)

    &__pop-up-text
        font-size w(20)
        margin-top w(15)
        line-height 140%
        +below(720px)
            font-size wm(9)
            margin-top wm(10)


    &__button
        margin-top w(30)
        background-color $c-pinck
        color $c-white
        width w(224)
        height w(70)
        border-radius w(40)
        font-size w(14)
        text-transform uppercase
        border none
        transition 0.3s
        &:hover
            border 1px solid $c-pinck
            color $c-pinck
            background-color $c-white

        +below(920px)
            width wm(70)
            height wm(20)
            border-radius wm(40)
            font-size wm(6)

        +below(720px)
            width wm(224)
            height wm(50)
            border-radius wm(40)
            font-size wm(16)
            margin-top wm(20)

    &__error
        animation shake 0.5s
        background-color $c-white
        border 1px solid $c-pinck
        color red

    &__error-text
        border 1px solid red

    &__error-text::placeholder
        color red

    &__button-file-name
        color $c-pinck
        font-size w(16)
        margin-top w(20)
        +below(920px)
            font-size wm(6)
            margin-top wm(10)
        +below(720px)
            font-size wm(16)







